{
  "id": "questionForm",
  "description": "a form that lets you build a single question",
  "pages": [
    {
      "id": "questionBuilder",
      "pageTitle": "Build A Question",
      "sections": [
        {
          "id": "baseData",
          "questions": {
            "id": {
              "id": "id",
              "type": "text",
              "label": {
                "text": "Question ID"
              },
              "validation": {
                "required": true
              }
            },
            "type": {
              "id": "type",
              "type": "select",
              "label": {
                "text": "Question Type"
              },
              "options": [
                {
                  "value": "text",
                  "display": "Text Input"
                },
                {
                  "value": "textarea",
                  "display": "Text Area Input"
                },
                {
                  "value": "number",
                  "display": "Number Input"
                },
                {
                  "value": "select",
                  "display": "Select Input"
                },
                {
                  "value": "checkbox",
                  "display": "Checkbox Input"
                },
                {
                  "value": "date",
                  "display": "Date Input"
                },
                {
                  "value": "radio",
                  "display": "Radio Input"
                }
              ]
            },
            "label": {
              "id": "label",
              "type": "text",
              "label": {
                "text": "Question Label"
              }
            }
          },
          "questionOrder": ["id", "type", "label"]
        },
        {
          "id": "options",
          "repeat": {
            "style": "list",
            "minEntries": 1
          },
          "questions": {
            "value": {
              "id": "value",
              "type": "number",
              "label": {
                "text": "Option Value"
              },
              "validation": {
                "required": true
              }
            },
            "display": {
              "id": "display",
              "type": "text",
              "label": {
                "text": "Option Display Text"
              },
              "validation": {
                "required": true
              }
            }
          },
          "questionOrder": ["value", "display"],
          "shouldAsk": {
            "statements": [
              {
                "sibling": "baseData.type",
                "expectedParentLevel": 1,
                "conditions": {
                  "valueMatches": "select"
                }
              },
              {
                "sibling": "baseData.type",
                "expectedParentLevel": 1,
                "conditions": {
                  "valueMatches": "radio"
                }
              }
            ],
            "check": "one"
          }
        }
      ]
    }
  ]
}
