              "id": "id",
              "type": "text",
              "label": {
                "text": "Question ID"
              },
              "validation": {
                "required": true
              }
            },
            "type": {
              "id": "type",
              "type": "select",
              "label": {
                "text": "Question Type"
              },
              "options": [
                {
                  "value": "text",
                  "display": "Text Input"
                },
                {
                  "value": "textarea",
                  "display": "Text Area Input"
                },
                {
                  "value": "number",
                  "display": "Number Input"
                },
                {
                  "value": "select",
                  "display": "Select Input"
                },
                {
                  "value": "checkbox",
                  "display": "Checkbox Input"
                },
                {
                  "value": "date",
                  "display": "Date Input"
                },
                {
                  "value": "radio",
                  "display": "Radio Input"
                }
              ]
            },
            "label": {
              "id": "label",
              "type": "text",
              "label": {
                "text": "Question Label"
              }
            }
          },
          "questionOrder": ["id", "type", "label"]
