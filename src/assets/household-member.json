{
  "id": 2,
  "description": "collects household members",
  "pages": [
    {
      "id": "householdMembers",
      "sections": [
        {
          "repeat": {
            "style": "list",
            "minEntries": 1,
            "maxEntries": 20
          },
          "questions": {
            "fName": {
              "id": "fName",
              "type": "text",
              "label": {
                "text": "First Name"
              },
              "validation": {
                "required": true
              }
            },
            "lName": {
              "id": "lName",
              "type": "text",
              "label": {
                "text": "Last Name"
              },
              "validation": {
                "required": true
              }
            },
            "birthday": {
              "id": "birthday",
              "type": "date",
              "label": {
                "text": "Birthdate"
              },
              "validation": {
                "dateBefore": "$today"
              }
            },
            "income": {
              "id": "income",
              "type": "number",
              "label": {
                "text": "Annual Income"
              },
              "validation": {
                "required": true,
                "min": 0,
                "max": 999999999
              },
              "shouldDisplay": {
                "check": "all",
                "statements": [
                  {
                    "sibling": "birthday",
                    "conditions": {
                      "isAgeGreaterOrEqual": 18
                    }
                  }
                ]
              }
            }
          }
        }
      ]
    }
  ]
}

